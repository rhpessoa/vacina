<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :Nome %>
  <%= text_input f, :nome %>
  <%= error_tag f, :nome %>

  <%= label f, :CPF %>
  <%= text_input f, :cpf, placeholder: "00000000001" %>
  <%= error_tag f, :cpf %>

  <div>
    <%= submit "Salvar" %>
  </div>
<% end %>
